{
  "name": "wordle",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "libs/*"
  ],
  "scripts": {
    "app:dev": "bun --env-file=../../.env run --cwd packages/app dev",
    "app:build": "bun --env-file=../../.env run --cwd packages/app build",
    "backend:dev": "bun --env-file=../../.env run --cwd packages/backend dev",
    "prisma": "bun --env-file=../../.env run --cwd libs/prisma-client with-prisma",
    "prisma:studio": "bun --env-file=../../.env run --cwd libs/prisma-client studio",
    "docker-compose:up": "docker-compose up -d",
    "dev": "bun docker-compose:up && concurrently --names app,server,prisma -c green,blue,cyan 'bun run app:dev' 'bun run backend:dev' 'bun run prisma:studio'",
    "lint": "eslint --cache",
    "lint:fix": "eslint --cache --fix"
  },
  "dependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.1",
    "@fortawesome/free-solid-svg-icons": "^6.7.1",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@tanstack/vue-query": "^5.62.3",
    "@trpc/server": "^10.45.2",
    "@vueuse/components": "^12.0.0",
    "@vueuse/core": "^12.0.0",
    "axios": "^1.7.9",
    "concurrently": "^9.1.0",
    "pinia": "^2.3.0",
    "tailwind-merge": "^2.5.5",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.4",
    "@tsconfig/node20": "^20.1.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vue/eslint-config-typescript": "^14.1.4",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-plugin-vue": "^9.32.0",
    "nitropack": "^2.10.4",
    "node-html-parser": "^6.1.13",
    "npm-run-all2": "^7.0.1",
    "postcss": "^8.4.49",
    "sass-embedded": "^1.81.0",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-vue-devtools": "^7.6.7",
    "vue-tsc": "^2.1.10"
  }
}
