{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/app/src/*"]
    }
  },
  "include": [
    "libs/types/**/*.ts",
    "libs/utility/**/*.ts",
    "packages/backend/appRouter.ts",

    "packages/app/env.d.ts",
    "packages/app/src/**/*.ts",
    "packages/app/src/**/*.vue"
  ],
  "exclude": [
    "packages/backend/src/**/*.ts"
  ]
}
